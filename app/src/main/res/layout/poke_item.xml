<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/poke_image"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/poke_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:textSize="30dp"

        android:textAppearance="@style/TextAppearance.Quote"
        app:layout_constraintBottom_toBottomOf="@id/poke_image"
        app:layout_constraintStart_toEndOf="@id/poke_image"
        app:layout_constraintTop_toTopOf="@id/poke_image" />

    <TextView
        android:id="@+id/poke_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAppearance="@style/TextAppearance.Quote"
        app:layout_constraintBottom_toBottomOf="@id/poke_image"
        app:layout_constraintStart_toEndOf="@id/poke_image"
        app:layout_constraintTop_toTopOf="@id/poke_image" />


</androidx.constraintlayout.widget.ConstraintLayout>